@model WebProje.Models.Rezervasyon
@{
    ViewBag.Title = "Rezervasyon";
    Layout = "_Layout";
}

<br />
<br />
<div class="contact-container" style="display: flex; justify-content: space-between;">
    <!-- İletişim Başlıkları -->
    <h1 style="padding-left: 150px">Rezervasyon </h1>
    <h1 style="padding-right: 220px;">Bilgilendirme</h1>
</div>

<br />


<div class="contact-container" style="display: flex; justify-content: space-between;">
    
    <div class="contact-form" style="flex: 1; padding-left: 20px;">
        <form class="form-group" method="post">
            <br/>
            @Html.Label("Ad Soyad")
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            <span asp-validation-for="Name" style="color:red"></span>
            <br/>
            @Html.Label("Telefon")
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @oninput = "this.value = this.value.replace(/[^0-9]/g, '')" })
            @* bu oninput klavyeden sadee sayı girebilmek için *@
            <span asp-validation-for="Phone" style="color:red"></span>
            <br/>
            @Html.Label("E Posta")
            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
            <span asp-validation-for="Mail" style="color:red"></span>
            <br/>
            @Html.Label("Kişi Sayısı")
            @Html.DropDownListFor(
                x => x.PersonCount,
                new List<SelectListItem>
                {
                    new SelectListItem { Value = "", Text = "Kaç Kişisiniz?", Disabled = true, Selected = true },
                    new SelectListItem { Value = "1", Text = "1" },
                    new SelectListItem { Value = "2", Text = "2" },
                    new SelectListItem { Value = "3", Text = "3" },
                    new SelectListItem { Value = "4", Text = "4" },
                    new SelectListItem { Value = "5", Text = "5" },
                    new SelectListItem { Value = "6", Text = "6+" },
                },
                new { @class = "form-control nice-select wide" }
            )
            @Html.ValidationMessageFor(x => x.PersonCount, "", new { @class = "text-danger" })
            <br/>
            @Html.Label("Zaman")
            <div>
                @Html.EditorFor(x => x.Date, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" } })
                @Html.ValidationMessageFor(x => x.Date, "", new { @class = "text-danger" })
            </div>
            <br/>
            <button class="btn btn-primary">Rezervasyon Talebi Oluştur</button>
        </form>
    </div>

   
    <div class="contact-info" style="flex: 1; padding-left: 150px;">
        <br/>
        <h6>
            *Tarafınıza Mail ile bilgilendirme yapılacaktır.<br/><br/>
            *15 DK geciken rezervasyonlar iptal edilir.<br/><br/>
            *Tarafınıza Mail Gelmemesi Durumunda İletişim:<br/>Tel: 0 505 091 09 00
        </h6>
    </div>
</div>