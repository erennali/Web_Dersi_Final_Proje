@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-section text-center text-white d-flex justify-content-center align-items-center"
     style="background-image: url('/images/restaurant.jpg'); background-size: cover; background-position: center; height: 70vh; position: relative;">
    <!-- Soluklaştırma katmanı -->
    <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.5);"></div>

    <!-- İçerik -->
    <div class="container" style="position: relative; z-index: 1;">
        <h1 class="display-4 fw-bold">Hoş Geldiniz!</h1>
        <p class="lead">Eren Ali Restoran'da lezzetli yemekler ve unutulmaz anlar sizi bekliyor. Keşfedin!</p>
        <div class="mt-4">
            <a class="btn btn-light btn-lg mx-3" asp-controller="Home" asp-action="Rezervasyon">Rezervasyon</a>
            <a class="btn btn-light btn-lg mx-3" asp-controller="Home" asp-action="Menu">Menü</a>
        </div>
    </div>
</div>

<div class="container mt-5 text-center">
    <h2>Lezzetli Yemekler, Sıcak Atmosfer</h2>
    <p class="lead">Restoranımızda her damak tadına uygun yemekler sunuyoruz. Menümüzü keşfedin ve hemen rezervasyon yapın.</p>
</div>

<!-- Optional: Adding a section with images of the restaurant, dishes, etc. -->
